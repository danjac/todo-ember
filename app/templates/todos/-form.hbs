<form {{action "save" on="submit"}}>
  <div>
    <label>
      Label
      {{input type="text" value=model.label}}
    </label>
  </div>
  <div>
    <label>
      Text
      {{input type="text" value=model.text}}
    </label>
  </div>
  <div>
    <label>
      Done
      {{input type="checkbox" checked=model.done}}
    </label>
  </div>
  <div>
    <input type="submit" value="Save">
  </div>
</form>
